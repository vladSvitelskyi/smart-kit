{
  "roots": [
    "<rootDir>/src/components",
    "<rootDir>/src/reactive-components"
  ],
  "collectCoverageFrom": [
    "<rootDir>/src/components/**/*.js"
  ],
  "setupFiles": [
    "<rootDir>/config/jest/testPolyfills.js"
  ],
  "testEnvironment": "jsdom",
  "testURL": "http://localhost",
  "transform": {
    "^.+\\.scss$": "<rootDir>/config/jest/cssTransform.js",
    "^.+\\.json$": "<rootDir>/config/jest/fileTransform.js",
    "^.+\\.js$": "babel-jest",
    "^.+\\.njk$": "<rootDir>/config/jest/njkTransform.js"
  },
  "testResultsProcessor": "jest-teamcity-reporter"
}